{#
  Parameters:
  - variant (string) (default: 'neutral')
  - title (string) (default: {})
  - icon_path (string) (default: {})
  - close_label (string) (default: '')
  - content (language-list object) (default: '')
#}

{% extends "@oe-bcl/bcl-modal/modal.html.twig" %}

{% set _title = title|default('') %}
{% set _icon_path = icon_path|default('') %}
{% set _close_label = close_label|default('') %}
{% set _content = content|default({}) %}
{% set _variant = variant|default('neutral') %}

{% if attributes is empty %}
  {% set attributes = create_attribute() %}
{% endif %}

{% set attributes = attributes.addClass(['bcl-language-list-modal', 'bcl-language-list-modal--' ~ _variant]) %}

{% block header %}
  {% if size == 'fullscreen' %}
  <div class="container">
    {% if variant == 'eu' or variant == 'ec' %}
    <div class="border-bottom mx-n3 px-3 px-md-0 pt-md-4-5">
      <div class="py-3-5 px-3 px-sm-0 px-md-3">
    {% endif %}
    <div class="d-flex justify-content-between align-items-center">
  {% endif %}
  <div class="d-flex align-items-center">
    {% set _title_classes = 'mb-0' %}
    {% if _icon_path is not empty %}
      {% set _title_classes = _title_classes ~ ' ms-2' %}
      {% include '@oe-bcl/bcl-icon/icon.html.twig' with {
        name: "globe",
        path: _icon_path
      } only %}
    {% endif %}
    <h5 class="{{ _title_classes }}">{{ _title }}</h5>
  </div>
  <button type="button" class="btn-close" data-bs-dismiss="modal"
    {% if _close_label is not empty %}
      aria-label="{{ _close_label }}"
    {% endif %}
  ></button>
  {% if size == 'fullscreen' %}
    </div>
    {% if variant == 'eu' or variant == 'ec' %}
      </div>
    </div>
    {% endif %}
  </div>
  {% endif %}
{% endblock %}

{% block body %}
  {% if _content is defined and _content is not empty %}
    {% include '@oe-bcl/bcl-language-list/language-list.html.twig' with _content|merge({
      variant: _variant,
      overlay: true,
      icon_path: _icon_path
    }) only %}
  {% endif %}
{% endblock %}
