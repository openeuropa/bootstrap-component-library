{
  "name": "@openeuropa/bcl-theme-default",
  "author": "European Commission",
  "license": "EUPL-1.2",
  "version": "0.1.0",
  "description": "OE - BCL theme default",
  "scripts": {
    "build": "npm-run-all build-plugins css js",
    "build-plugins": "plugins-builder",
    "css": "npm-run-all css-*",
    "css-clean": "rimraf css",
    "css-compile": "sass --load-path=../../../node_modules --load-path=./node_modules --style expanded --source-map --embed-sources --no-error-css oe-bcl-default.scss:css/oe-bcl-default.css",
    "css-prefix": "postcss --config postcss.config.js --replace \"css/*.css\"",
    "css-minify": "cleancss -O1 --format breakWith=lf --source-map --source-map-inline-sources --output css/oe-bcl-default.min.css css/oe-bcl-default.css",
    "js": "npm-run-all js-*",
    "js-clean": "rimraf js",
    "js-compile": "npm-run-all js-compile-*",
    "js-compile-standalone": "rollup --environment BUNDLE:false --config scripts/rollup.config.js --sourcemap",
    "js-compile-standalone-esm": "rollup --environment ESM:true,BUNDLE:false --config scripts/rollup.config.js --sourcemap",
    "js-compile-bundle": "rollup --environment BUNDLE:true --config scripts/rollup.config.js --sourcemap",
    "js-minify": "npm-run-all js-minify-*",
    "js-minify-standalone": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"content='js/oe-bcl-default.js.map',includeSources,url='oe-bcl-default.min.js.map'\" --output js/oe-bcl-default.min.js js/oe-bcl-default.js",
    "js-minify-standalone-esm": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"content='js/oe-bcl-default.esm.js.map',includeSources,url='oe-bcl-default.esm.min.js.map'\" --output js/oe-bcl-default.esm.min.js js/oe-bcl-default.esm.js",
    "js-minify-bundle": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"content='js/oe-bcl-default.bundle.js.map',includeSources,url='oe-bcl-default.bundle.min.js.map'\" --output js/oe-bcl-default.bundle.min.js js/oe-bcl-default.bundle.js",
    "prepublish": "npm run build",
    "twig": "copyfiles -f ../../components/**/*.twig templates/"
  },
  "devDependencies": {
    "@openeuropa/bcl-bootstrap": "0.1.0",
    "@popperjs/core": "2.9.2",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "19.0.0",
    "@rollup/plugin-node-resolve": "13.0.0",
    "@rollup/plugin-replace": "2.4.2",
    "autoprefixer": "10.2.6",
    "clean-css-cli": "5.3.0",
    "copyfiles": "2.4.1",
    "glob": "7.1.7",
    "npm-run-all": "4.1.5",
    "postcss": "8.3.3",
    "postcss-cli": "8.3.1",
    "rollup": "2.51.2",
    "rollup-plugin-istanbul": "3.0.0",
    "sass": "1.34.1",
    "terser": "5.7.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openeuropa/bootstrap-component-library.git"
  },
  "bugs": {
    "url": "https://github.com/openeuropa/bootstrap-component-library.git/issues"
  },
  "homepage": "https://github.com/openeuropa/bootstrap-component-library",
  "keywords": [
    "openeuropa",
    "bootstrap-component-library",
    "design-system",
    "twig"
  ]
}
