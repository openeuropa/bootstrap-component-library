{
  "name": "oe-bootstrap-component-library",
  "version": "0.1.0",
  "private": true,
  "description": "Openeuropa Bootstrap Component Library",
  "author": "EUROPEAN COMMISSION",
  "license": "EUPL",
  "repository": {
    "type": "git"
  },
  "scripts": {
    "build:themes": "lerna --scope \"@openeuropa/bcl-theme-*\" run build",
    "changelog": "lerna-changelog",
    "clean": "rimraf build assets",
    "copy:assets": "copyfiles -f src/themes/**/*min.* node_modules/slim-select/dist/slimselect.min.js static/* assets/",
    "copy:build": "copyfiles assets/* static/* build",
    "css-lint": "stylelint src/**/*.scss",
    "dist": "run-s clean dist:*",
    "dist:themes": "run-s build:themes copy:*",
    "dist:storybook": "build-storybook -c storybook/.storybook -s assets -o build",
    "jest": "jest",
    "patch": "patch-package",
    "postinstall": "run-s patch pre-publish copy:assets",
    "prepare": "husky install",
    "pre-publish": "lerna run postinstall && lerna run prepublish",
    "pretty:check": "prettier --check \"(src|storybook|tools)/**/*.{md,mdx,html,json,yml,js,jsx,scss}\"",
    "pretty:fix": "prettier --write \"(src|storybook|tools)/**/*.{md,mdx,html,json,yml,js,jsx,scss}\"",
    "publish": "scripts/publish.sh",
    "start": "run-p watch storybook server",
    "server": "browser-sync start --proxy localhost:5000 --files \"assets/oe-bcl-default.min.css\"",
    "storybook": "start-storybook -p 5000 -c storybook/.storybook -s assets/ --ci",
    "test": "npm-run-all css-lint twig:snapshots",
    "twig:snapshots": "npm run jest",
    "update-version": "scripts/update-version.sh",
    "watch": "nodemon --ignore 'src/themes/**/*.twig' -e twig,scss -x \"run-s build:themes copy:assets\""
  },
  "keywords": [
    "openeuropa",
    "component library",
    "bootstrap",
    "sass",
    "css",
    "javascript",
    "template",
    "twig"
  ],
  "workspaces": {
    "packages": [
      "storybook",
      "bootstrap",
      "builder",
      "src/data/*",
      "src/components/*",
      "src/compositions/*",
      "tools/*",
      "src/themes/*"
    ],
    "nohoist": [
      "**/bootstrap",
      "**/bootstrap/**",
      "**/@openeuropa/bcl-twig-templates",
      "**/@openeuropa/bcl-twig-templates/**"
    ]
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.14.5",
    "@babel/core": "7.14.6",
    "@babel/plugin-transform-runtime": "7.14.5",
    "@babel/preset-env": "7.14.7",
    "@babel/preset-react": "7.14.5",
    "babel-jest": "27.0.6",
    "browser-sync": "2.27.4",
    "browser-update": "3.3.30",
    "copyfiles": "2.4.1",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "glob": "7.1.7",
    "husky": "6.0.0",
    "jest": "27.0.6",
    "lerna": "4.0.0",
    "lerna-changelog": "1.0.1",
    "lint-staged": "11.0.1",
    "nodemon": "2.0.12",
    "npm-run-all": "4.1.5",
    "patch-package": "6.4.7",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "slim-select": "1.27.0",
    "stylelint": "13.13.1",
    "stylelint-config-twbs-bootstrap": "2.2.1"
  },
  "resolutions": {
    "ssri": ">=6.0.2",
    "xmlhttprequest-ssl": ">=1.6.2",
    "hosted-git-info": ">=3.0.8",
    "trim-newlines": ">=3.0.1 <4.0.0"
  }
}
