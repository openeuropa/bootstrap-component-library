{
  "name": "oe-bootstrap-component-library",
  "version": "0.1.0",
  "private": true,
  "description": "Openeuropa Bootstrap Component Library",
  "author": "EUROPEAN COMMISSION",
  "license": "EUPL",
  "repository": {
    "type": "git"
  },
  "scripts": {
    "align-templates": "lerna --scope \"@openeuropa/bcl-twig-templates\" run prepublish",
    "build:themes": "lerna --scope \"@openeuropa/bcl-theme-*\" run build",
    "build:theme:default": "lerna --scope \"@openeuropa/bcl-theme-default\" run build",
    "build:theme:joinup": "lerna --scope \"@openeuropa/bcl-theme-joinup\" run build",
    "build:theme:ucpkn": "lerna --scope \"@openeuropa/bcl-theme-ucpkn\" run build",
    "build:storybook": "lerna --scope \"@openeuropa/bcl-storybook-*\" run build",
    "changelog": "lerna-changelog",
    "clean": "rimraf build assets",
    "clean:themes": "lerna --scope \"@openeuropa/bcl-theme-*\" run clean",
    "copy:assets": "copyfiles -f src/themes/**/*min.* node_modules/slim-select/dist/slimselect.min.js static/* assets/ && copyfiles -u 3 src/themes/**/fonts/* assets && copyfiles -u 3 src/themes/**/fonts/files/* assets",
    "copy:index": "copyfiles -f static/index.html build",
    "css-lint": "stylelint --fix src/**/*.scss",
    "dist": "run-s clean dist:*",
    "dist:themes": "run-s build:themes copy:*",
    "dist:storybook": "lerna --scope \"@openeuropa/bcl-storybook-*\" run dist",
    "dist-project": "run-s clean build:theme:{1} copy:assets  dist-storybook:{1} --",
    "dist-storybook:default": "lerna --scope \"@openeuropa/bcl-storybook-default\" run dist",
    "dist-storybook:joinup": "lerna --scope \"@openeuropa/bcl-storybook-joinup\" run dist",
    "dist-storybook:ucpkn": "lerna --scope \"@openeuropa/bcl-storybook-ucpkn\" run dist",
    "jest": "jest",
    "patch": "patch-package",
    "postinstall": "run-s patch pre-publish copy:assets",
    "prepare": "husky install",
    "pre-publish": "lerna run postinstall && lerna run prepublish",
    "pretty:check": "prettier --check \"(src|storybook|tools|builder)/**/*.{md,mdx,html,json,yml,js,jsx,scss}\"",
    "pretty:fix": "prettier --write \"(src|storybook|tools|builder)/**/*.{md,mdx,html,json,yml,js,jsx,scss}\"",
    "publish": "scripts/publish.sh",
    "start": "run-p \"watch {1}\" \"storybook:{1}\" server --",
    "start-dev": "run-p watch-dev storybook server",
    "server": "browser-sync start --proxy localhost:5000 --files \"assets/*\"",
    "size": "size-limit",
    "storybook": "start-storybook -p 5000",
    "storybook:default": "start-storybook -p 5000 -c src/themes/default/storybook/.storybook --ci",
    "storybook:joinup": "start-storybook -p 5000 -c src/themes/joinup/storybook/.storybook assets/ --ci",
    "storybook:ucpkn": "start-storybook -p 5000 -c src/themes/ucpkn/storybook/.storybook assets/ --ci",
    "test": "npm-run-all css-lint twig:snapshots",
    "twig:snapshots": "npm run jest",
    "update-version": "scripts/update-version.sh",
    "watch": "nodemon --ignore 'src/themes/**/templates/**/*.twig' --ignore 'src/components/bcl-twig-templates/**/*.twig' -e twig,scss -x \"run-s align-templates \"build:theme:{1}\" copy:assets --\"",
    "watch-dev": "nodemon --ignore 'src/themes/**/templates/**/*.twig' --ignore 'src/components/bcl-twig-templates/**/*.twig' -e twig,scss -x \"run-s \"build:theme:default\" copy:assets \""
  },
  "keywords": [
    "openeuropa",
    "component library",
    "bootstrap",
    "sass",
    "css",
    "javascript",
    "template",
    "twig"
  ],
  "workspaces": {
    "packages": [
      "bootstrap",
      "builder",
      "src/data/*",
      "src/components/*",
      "src/compositions/*",
      "tools/*",
      "src/themes/*",
      "src/themes/**/storybook"
    ],
    "nohoist": [
      "**/bootstrap",
      "**/bootstrap/**",
      "**/@openeuropa/bcl-twig-templates",
      "**/@openeuropa/bcl-twig-templates/**",
      "**/@fontsource/**"
    ]
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.17.0",
    "@babel/core": "7.17.0",
    "@babel/plugin-transform-runtime": "7.17.0",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@size-limit/preset-big-lib": "7.0.8",
    "babel-jest": "27.4.6",
    "browser-sync": "2.27.7",
    "browser-update": "3.3.37",
    "copyfiles": "2.4.1",
    "eslint": "8.8.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "glob": "7.2.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "lerna": "4.0.0",
    "lerna-changelog": "2.2.0",
    "lint-staged": "12.3.3",
    "nodemon": "2.0.15",
    "npm-run-all": "4.1.5",
    "patch-package": "6.4.7",
    "postcss-scss": "4.0.3",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "size-limit": "7.0.8",
    "slim-select": "1.27.1",
    "stylelint": "14.3.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-recommended-scss": "5.0.2"
  },
  "resolutions": {
    "nth-check": ">=2.0.1",
    "strip-ansi": "6.0.1",
    "json-schema": ">=0.4.0",
    "follow-redirects": ">=1.14.7",
    "nanoid": ">=3.1.31",
    "node-fetch": "2.6.7"
  }
}
