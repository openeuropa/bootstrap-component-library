{
  "name": "oe-bootstrap-component-library",
  "version": "0.1.0",
  "private": true,
  "description": "Openeuropa Bootstrap Component Library",
  "author": "EUROPEAN COMMISSION",
  "license": "EUPL",
  "repository": {
    "type": "git"
  },
  "scripts": {
    "align-templates": "lerna --scope \"@openeuropa/bcl-twig-templates\" run prepublish",
    "build:themes": "lerna --scope \"@openeuropa/bcl-theme-*\" run build",
    "build:theme:default": "lerna --scope \"@openeuropa/bcl-theme-default\" run build",
    "build:theme:dev": "lerna --scope \"@openeuropa/bcl-theme-default\" run build",
    "build:theme:joinup": "lerna --scope \"@openeuropa/bcl-theme-joinup\" run build",
    "build:theme:ucpkn": "lerna --scope \"@openeuropa/bcl-theme-ucpkn\" run build",
    "build:storybook:default": "lerna --scope \"@openeuropa/bcl-storybook-default\" run build",
    "build:storybook:dev": "lerna --scope \"@openeuropa/bcl-storybook-default\" run build",
    "build:storybook:joinup": "lerna --scope \"@openeuropa/bcl-storybook-joinup\" run build",
    "build:storybook:ucpkn": "lerna --scope \"@openeuropa/bcl-storybook-ucpkn\" run build",
    "build:chromatic:default": "cd src/themes/default/storybook && npm run dist-chromatic",
    "build:chromatic:joinup": "cd src/themes/joinup/storybook && npm run dist-chromatic",
    "build:chromatic:ucpkn": "cd src/themes/ucpkn/storybook && npm run dist-chromatic",
    "changelog": "lerna-changelog",
    "clean": "rimraf build assets",
    "clean:themes": "lerna --scope \"@openeuropa/bcl-theme-*\" run clean",
    "copy:assets": "copyfiles -f src/themes/**/*min.* node_modules/slim-select/dist/slimselect.min.js static/* assets/ && copyfiles -u 3 src/themes/**/fonts/* assets && copyfiles -u 3 src/themes/**/fonts/files/* assets",
    "copy:index": "copyfiles -f static/index.html build",
    "dist": "run-s clean dist:*",
    "dist:themes": "run-s build:themes copy:*",
    "dist:storybook": "lerna --scope \"@openeuropa/bcl-storybook-*\" run dist",
    "dist-project": "run-s clean build:theme:{1} copy:assets  dist-storybook:{1} --",
    "dist-storybook:default": "lerna --scope \"@openeuropa/bcl-storybook-default\" run dist",
    "dist-storybook:joinup": "lerna --scope \"@openeuropa/bcl-storybook-joinup\" run dist",
    "dist-storybook:ucpkn": "lerna --scope \"@openeuropa/bcl-storybook-ucpkn\" run dist",
    "fix": "run-p fix:*",
    "fix:js": "eslint --fix src --ext .js",
    "fix:scss": "stylelint --fix src/**/*.scss",
    "fix:prettier": "prettier --write \"(src|storybook|tools|builder|scripts)/**/*.{md,mdx,html,json,yml,js,jsx,scss}\"",
    "lint": "run-p lint:*",
    "lint:scss": "stylelint src/**/*.scss",
    "lint:js": "eslint src --ext .js",
    "jest": "jest",
    "patch": "patch-package",
    "patch-build": "scripts/patch-build.js",
    "postinstall": "run-s patch pre-publish copy:assets",
    "prepare": "husky install",
    "prepare-env": "scripts/prepare-env.js",
    "pre-publish": "lerna run postinstall && lerna run prepublish",
    "pretty:check": "prettier --check \"(src|storybook|tools|builder)/**/*.{md,mdx,html,json,yml,js,jsx,scss}\"",
    "publish": "scripts/publish.sh",
    "start": "run-p \"build:theme:{1}\" \"build:storybook:{1}\" \"watch {1}\" \"storybook:{1}\" --",
    "size": "size-limit",
    "storybook:dev": "STORYBOOK_ENV=chromatic start-storybook -p 5000 --ci",
    "storybook:default": "start-storybook -p 5001 -c src/themes/default/storybook/.storybook --ci",
    "storybook:joinup": "STORYBOOK_THEME=joinup start-storybook -p 5002 -c src/themes/joinup/storybook/.storybook --ci",
    "storybook:ucpkn": "STORYBOOK_THEME=ucpkn start-storybook -p 5003 -c src/themes/ucpkn/storybook/.storybook --ci",
    "test": "npm-run-all pretty:check lint:* twig:snapshots",
    "twig:snapshots": "npm run jest",
    "update-version": "scripts/update-version.sh",
    "watch": "scripts/watch.js --"
  },
  "keywords": [
    "openeuropa",
    "component library",
    "bootstrap",
    "sass",
    "css",
    "javascript",
    "template",
    "twig"
  ],
  "workspaces": {
    "packages": [
      "bootstrap",
      "builder",
      "src/data/*",
      "src/components/*",
      "src/compositions/*",
      "tools/**",
      "src/themes/*",
      "src/themes/**/storybook"
    ],
    "nohoist": [
      "**/bootstrap*",
      "**/bootstrap*/**",
      "**/@openeuropa/bcl-twig-templates",
      "**/@openeuropa/bcl-twig-templates/**",
      "**/@fontsource/**"
    ]
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.17.10",
    "@babel/core": "7.18.5",
    "@babel/eslint-parser": "7.18.2",
    "@babel/plugin-transform-runtime": "7.18.5",
    "@babel/preset-env": "7.18.2",
    "@babel/preset-react": "7.17.12",
    "@size-limit/preset-big-lib": "7.0.8",
    "babel-jest": "28.1.1",
    "browser-sync": "2.27.10",
    "browser-update": "3.3.38",
    "chromatic": "6.5.6",
    "copyfiles": "2.4.1",
    "eslint": "8.17.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-prettier": "4.0.0",
    "glob": "8.0.3",
    "husky": "8.0.1",
    "jest": "28.1.1",
    "jest-environment-jsdom": "28.1.1",
    "lerna": "5.1.1",
    "lerna-changelog": "2.2.0",
    "lint-staged": "13.0.1",
    "nodemon": "2.0.16",
    "npm-run-all": "4.1.5",
    "patch-package": "6.4.7",
    "postcss-scss": "4.0.4",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "size-limit": "7.0.8",
    "slim-select": "1.27.1",
    "stylelint": "14.9.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-recommended-scss": "6.0.0"
  },
  "resolutions": {
    "nth-check": ">=2.0.1"
  }
}
