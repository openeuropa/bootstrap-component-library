{
  "name": "oe-bootstrap-component-library",
  "version": "0.1.0",
  "private": true,
  "description": "OEL Component Library",
  "author": "EUROPEAN COMMISSION",
  "license": "EUPL",
  "repository": {
    "type": "git"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "scripts": {
    "align-templates": "lerna --scope \"@openeuropa/bcl-twig-templates\" run prepublish",
    "build:themes": "lerna --scope \"@openeuropa/bcl-theme-default\" run build && lerna --scope \"@openeuropa/bcl-theme-joinup\" run build && lerna --scope \"@openeuropa/bcl-theme-ucpkn\" run build",
    "build:theme:default": "lerna --scope \"@openeuropa/bcl-theme-default\" run build",
    "build:theme:dev": "lerna --scope \"@openeuropa/bcl-theme-default\" run build",
    "build:theme:joinup": "lerna --scope \"@openeuropa/bcl-theme-joinup\" run build",
    "build:theme:ucpkn": "lerna --scope \"@openeuropa/bcl-theme-ucpkn\" run build",
    "build:storybook:default": "lerna --scope \"@openeuropa/bcl-storybook-default\" run build",
    "build:storybook:dev": "lerna --scope \"@openeuropa/bcl-storybook-default\" run build",
    "build:storybook:joinup": "lerna --scope \"@openeuropa/bcl-storybook-joinup\" run build",
    "build:storybook:ucpkn": "lerna --scope \"@openeuropa/bcl-storybook-ucpkn\" run build",
    "changelog": "lerna-changelog",
    "clean": "rimraf build assets",
    "clean:themes": "lerna --scope \"@openeuropa/bcl-theme-default\" run clean && lerna --scope \"@openeuropa/bcl-theme-joinup\" run clean && lerna --scope \"@openeuropa/bcl-theme-ucpkn\" run clean",
    "copy:assets": "copyfiles -f src/themes/**/*min.* node_modules/slim-select/dist/slimselect.min.js static/* assets/ && copyfiles -u 3 src/themes/**/fonts/* assets && copyfiles -u 3 src/themes/**/fonts/files/* assets",
    "copy:index": "copyfiles -f static/*.html static/*.ico build",
    "dist": "run-s clean dist:themes && dist:storybook",
    "dist:themes": "run-s build:themes copy:assets copy:index",
    "dist:storybook": "lerna --scope \"@openeuropa/bcl-storybook-default\" run dist && lerna --scope \"@openeuropa/bcl-storybook-joinup\" run dist && lerna --scope \"@openeuropa/bcl-storybook-ucpkn\" run dist",
    "dist-project": "run-s clean build:theme:{1} copy:assets  dist-storybook:{1} --",
    "dist-storybook:default": "lerna --scope \"@openeuropa/bcl-storybook-default\" run dist",
    "dist-storybook:joinup": "lerna --scope \"@openeuropa/bcl-storybook-joinup\" run dist",
    "dist-storybook:ucpkn": "lerna --scope \"@openeuropa/bcl-storybook-ucpkn\" run dist",
    "fix": "run-p fix:js && run-p fix:scss && run-p fix:prettier",
    "fix:js": "eslint --fix src --ext .js",
    "fix:scss": "stylelint --fix src/**/*.scss",
    "fix:prettier": "prettier --write \"(src|storybook|tools|builder|scripts)/**/*.{md,mdx,html,json,yml,js,jsx,scss}\"",
    "lint": "run-p lint:js lint:prettier",
    "lint:js": "eslint src",
    "lint:prettier": "prettier --check \"(src|storybook|tools|builder)/**/*.{md,mdx,html,json,yml,js,jsx,scss}\"",
    "jest": "jest",
    "patch": "patch-package",
    "patch-build": "scripts/patch-build.js",
    "postinstall": "run-s patch pre-publish copy:assets build:themes",
    "prepare": "husky install",
    "prepare-env": "scripts/prepare-env.js",
    "pre-publish": "lerna run postinstall && lerna run prepublish",
    "publish": "scripts/publish.sh",
    "start": "run-p \"build:theme:{1}\" \"build:storybook:{1}\" \"watch {1}\" \"storybook:{1}\" --",
    "size": "size-limit",
    "storybook:dev": "storybook dev -p 5000 --ci",
    "storybook:default": "storybook dev -p 5001 -c src/themes/default/storybook/.storybook --ci",
    "storybook:joinup": "STORYBOOK_THEME=joinup storybook dev -p 5002 -c src/themes/joinup/storybook/.storybook --ci",
    "storybook:ucpkn": "STORYBOOK_THEME=ucpkn storybook dev -p 5003 -c src/themes/ucpkn/storybook/.storybook --ci",
    "test": "npm-run-all lint twig:snapshots",
    "twig:snapshots": "npm run jest",
    "update-version": "scripts/update-version.sh",
    "watch": "scripts/watch.js --"
  },
  "keywords": [
    "openeuropa",
    "component library",
    "bootstrap",
    "sass",
    "css",
    "javascript",
    "template",
    "twig"
  ],
  "workspaces": {
    "packages": [
      "bootstrap",
      "builder",
      "src/data/*",
      "src/components/*",
      "src/compositions/*",
      "tools/**",
      "src/themes/*",
      "src/themes/**/storybook"
    ],
    "nohoist": [
      "**/bootstrap*",
      "**/bootstrap*/**",
      "**/@openeuropa/bcl-twig-templates",
      "**/@openeuropa/bcl-twig-templates/**",
      "**/@fontsource/**"
    ]
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.26.4",
    "@babel/core": "^7.26.9",
    "@babel/eslint-parser": "^7.26.8",
    "@babel/plugin-transform-runtime": "7.26.9",
    "@babel/preset-env": "7.26.9",
    "@babel/preset-react": "7.26.3",
    "@popperjs/core": "^2.11.8",
    "@size-limit/preset-big-lib": "11.2.0",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.5",
    "@storybook/theming": "^8.5.8",
    "babel-jest": "29.7.0",
    "browser-sync": "3.0.3",
    "browser-update": "3.3.55",
    "copyfiles": "2.4.1",
    "eslint": "^9.20.1",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "5.2.3",
    "glob": "11.0.1",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-axe": "6.0.1",
    "jest-environment-jsdom": "29.7.0",
    "lerna": "8.2.0",
    "lerna-changelog": "2.2.0",
    "lint-staged": "13.3.0",
    "npm-run-all": "4.1.5",
    "patch-package": "8.0.0",
    "postcss-scss": "4.0.9",
    "prettier": "3.5.1",
    "rimraf": "6.0.1",
    "size-limit": "11.2.0",
    "slim-select": "1.27.1",
    "storybook": "^8.5.8",
    "stylelint": "^16.14.1",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-recommended-scss": "14.1.0",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0"
  },
  "packageManager": "yarn@4.6.0"
}
